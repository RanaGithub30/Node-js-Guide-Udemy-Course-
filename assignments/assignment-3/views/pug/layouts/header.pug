doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        block cssContent
    body 
    if path !== "404"
            header 
                    nav 
                        ul
                            li 
                                a(href="/" class=(path==="/" ? 'active' : '')) Home 
                            li 
                                a(href="/users" class=(path==="/users" ? 'Users' : '')) Users
            main
            block content
    else
            main 
            block notFoundContent